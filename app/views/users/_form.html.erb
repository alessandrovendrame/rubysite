<p>
  <%= f.label :login %>
  <%= f.text_field :login %>
</p>

<p>
  <%= f.label :password %>
  <%= f.password_field :password %>
</p>

<p>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
</p>


<h3>Roles</h3>

<% @roles.each do |role| %>

  <p>
    <%= role.name %>
    <%= check_box_tag "roles[#{role.id}]", nil, @user.user_roles.any? { |u| u.role_id == role.id } %>
  </p>

<% end %>