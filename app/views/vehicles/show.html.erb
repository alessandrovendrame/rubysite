<div id="mainblock">
  <div id="mainblockwrapper">
    <div id="contentstriptab1" class="contentblock">

      <h3>Elimina voce</h3>
      <p>
        Sei sicuro di voler cancellare l'azienda <%= @vehicle.name %>?
      </p>

      <%= form_for @vehicle, method: :delete do |f| %>

        <div class="buttons highlight padding4px" style="margin-top: 40px"> 
          <%= content_tag(:button, icon("add") + " Elimina", :class => "buttons", :style => "float: right;") %>
