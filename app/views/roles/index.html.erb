<table border="0" cellspacing="5" cellpadding="5">
  <tr>
    <th>Nome</th>
    <th>Admin</th>
    <th>&nbsp;</th>
  </tr>
  
  <% @roles.each do |role| %>
    <tr>
      <td><%= link_to role.name, role_path(role) %></td>
      <td><%= role.admin? %></td>
      <td><%= link_to 'Elimina', role_path(role), :method => :delete, :confirm => 'Sei sicuro?' %></td>
    </tr>
  <% end %>
</table>

